    <!-- Base application theme. -->
    <style name="Theme.Cround" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_light_purple</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_light_purple</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/CroundActionBar</item>
        <item name="bottomNavigationStyle">@style/CroundBottomNavigation</item>
    </style>
    <style name="CroundActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>
    <style name="CroundBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>