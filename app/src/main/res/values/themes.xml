    <!-- Base application theme. -->
    <style name="Theme.Cround" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_light_purple</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_light_purple</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Widget.Cround.DrawerArrowToggle</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>
    <style name="Widget.Cround.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>
</resources>