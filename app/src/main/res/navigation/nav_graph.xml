<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_fragment_main">

    <fragment
        android:id="@+id/nav_fragment_signin"
        android:name="com.cround.cround.signin.SignInFragment"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_nav_fragment_signin_to_nav_fragment_main"
            app:destination="@id/nav_fragment_main"
            app:popUpTo="@id/nav_fragment_signin"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_nav_fragment_signin_to_nav_fragment_signup"
            app:destination="@id/nav_fragment_signup"/>
    </fragment>

    <fragment
        android:id="@+id/nav_fragment_signup"
        android:name="com.cround.cround.signin.SignUpFragment"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_nav_fragment_signup_to_nav_fragment_main"
            app:destination="@id/nav_fragment_main"
            app:popUpTo="@id/nav_fragment_signin"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_nav_fragment_signup_to_nav_fragment_signin"
            app:destination="@id/nav_fragment_signin"
            app:popUpTo="@id/nav_fragment_signin"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_fragment_main"
        android:name="com.cround.cround.MainFragment"
        android:label="Cround"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_nav_fragment_main_to_nav_fragment_settings"
            app:destination="@id/nav_fragment_settings" />
        <action
            android:id="@+id/action_nav_fragment_main_to_nav_fragment_user_profile"
            app:destination="@id/nav_fragment_user_profile" />
        <action
            android:id="@+id/action_nav_fragment_main_to_nav_fragment_signin"
            app:destination="@id/nav_fragment_signin"
            app:popUpTo="@id/nav_fragment_main"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_fragment_settings"
        android:name="com.cround.cround.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_fragment_user_profile"
        android:name="com.cround.cround.UserProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_user_profile" />

    <fragment
        android:id="@+id/nav_fragment_timeline"
        android:name="com.cround.cround.TimelineFragment"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/nav_fragment_explore"
        android:name="com.cround.cround.ExploreFragment"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/nav_fragment_notifications"
        android:name="com.cround.cround.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

</navigation>